      let favicon = document.querySelector(
        'link[rel="icon"]'
      ) as HTMLAnchorElement;

      if (favicon) {
        setInterval(() => {
          const svg = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><text y="1.1em" font-size="80">${favicons[index]}</text></svg>`;
